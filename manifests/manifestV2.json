{
  "name": "devspark",
  "description": "A Cross Browser Template for Firefox",
  "version": "1.0.4",
  "manifest_version": 2,
  "browser_specific_settings": {
    "gecko": {
      "id": "devsparkaddonid@pastr"
    }
  },
  "browser_action": {
    "default_popup": "./popup.html",
    "default_title": "Open the popup"
  },
  "optional_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "webRequest",
    "https://github.com/*",
    "http://localhost/*",
    "webNavigation"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*",
        "https://wealth-dev.evooq.ch/*",
        "http://localhost/*"
      ],
      "run_at": "document_end",
      "js": [
        "./index.global.js"
      ]
    }
  ],
  "background": {
    "page": "./background.html",
    "persistent": false
  },
  "options_ui": {
    "page": "./options.html",
    "open_in_tab": true
  },
  "icons": {
    "128": "Devspark_logo.png"
  }
}
