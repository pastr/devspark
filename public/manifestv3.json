{
  "name": "devspark",
  "description": "A Cross Browser Template for Google Chrome",
  "version": "1.0.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Open the popup"
  },
  "host_permissions": [
    "https://github.com/*",
    "https://wealth-dev.evooq.ch/*",
    "https://wealth.evooq.ch/*",
    "http://localhost:*/"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://blank.org/*"
      ],
      "run_at": "document_end",
      "js": [
        "./index.global.js"
      ],
      "css": [
        "./style.css"
      ]
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "webRequest"
  ],
  "background": {
    "service_worker": "./background.global.js"
  },
  "options_page": "options/options.html",
  "icons": {
    "128": "vite.svg"
  }
}