{
  "name": "devspark",
  "description": "A Cross Browser Template for Firefox",
  "version": "1.0.0",
  "manifest_version": 2,
  "browser_specific_settings": {
    "gecko": {
      "id": "devsparkaddonid@pastr"
    }
  },
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "Open the popup"
  },
  "optional_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://blank.org/*"
      ],
      "run_at": "document_end",
      "js": [
        "./index.global.js"
      ],
      "css": [
        "./style.css"
      ]
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "webRequest",
    "https://github.com/*",
    "https://wealth-dev.evooq.ch/*",
    "https://wealth.evooq.ch/*",
    "hhttp://localhost/*"
  ],
  "background": {
    "page": "background/background.html",
    "persistent": false
  },
  "options_ui": {
    "page": "options/options.html"
  },
  "icons": {
    "128": "vite.svg"
  }
}