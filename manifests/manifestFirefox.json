{
  "name": "devspark",
  "description": "Enhance Your GitHub and Jira Experience with this browser extension.",
  "version": "The version is defined in the root package.json file.",
  "manifest_version": 3,
  "browser_specific_settings": {
    "gecko": {
      "id": "devsparkaddonid@pastr"
    }
  },
  "action": {
    "default_popup": "./popup.html",
    "default_title": "Open the popup"
  },
  "permissions": [
    "storage",
    "tabs",
    "webRequest"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*"
      ],
      "run_at": "document_idle",
      "js": [
        "./content.github.js"
      ]
    },
    {
      "matches": [
        "https://*.atlassian.net/*"
      ],
      "run_at": "document_idle",
      "js": [
        "./content.jira.js"
      ]
    },
    {
      "matches": [
        "https://*/*"
      ],
      "run_at": "document_idle",
      "js": [
        "./content.allHosts.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "./background.global.js"
    ],
    "type": "module"
  },
  "options_ui": {
    "page": "./options.html",
    "open_in_tab": true
  },
  "icons": {
    "128": "devspark_logo_128.png",
    "48": "devspark_logo_48.png"
  }
}
