{
  "name": "devsparktoolbox",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev:vite": "vite",
    "dev": "vite build --watch",
    "dev:content": "vite build --config vite.content.config.ts --watch",
    "dev:background": "vite build --config vite.chrome.background.config.ts --watch",
    "preview": "vite preview",
    "build:manifest:chrome": "mv dist/manifestv3.json dist/manifest.json",
    "build:background:chrome": "vite build --config vite.chrome.background.config.ts",
    "build:js": "vite build --config vite.content.config.ts",
    "build:web": "tsc && vite build",
    "build:firefox": "NODE_ENV=production run-s build:js build:web",
    "build:chrome": "NODE_ENV=production run-s build:js build:background:chrome build:web build:manifest:chrome",
    "lint": "eslint --ext .tsx,.ts popup/ options/ content-script/ background/ common/ --fix"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "5.48.0",
    "@typescript-eslint/parser": "5.48.0",
    "eslint": "8.31.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-react": "7.31.11",
    "eslint-plugin-react-hooks": "4.6.0",
    "lodash.set": "^4.3.2",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@types/chrome": "0.0.206",
    "@types/lodash.set": "^4.3.7",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.10",
    "@types/webextension-polyfill": "0.9.2",
    "@vitejs/plugin-react": "3.0.1",
    "autoprefixer": "10.4.13",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.21",
    "tailwindcss": "3.2.4",
    "typescript": "4.9.4",
    "vite": "4.0.3",
    "webextension-polyfill": "0.10.0"
  }
}