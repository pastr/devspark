{
  "name": "devsparktoolbox",
  "description": "An add-on containing multiple improvement for GitHub and Jira",
  "version": "1.0.0",
  "manifest_version": 2,
  "browser_specific_settings": {
    "gecko": {
      "id": "devsparktoolboxaddonid@pastr",
      "update_url": "https://pastr.ch/devsparktoolbox/updates.json"
    }
  },
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "Open the popup"
  },
  "optional_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "webRequest",
    "https://github.com/*",
    "http://localhost/*"
  ],
  "background": {
    "page": "background/background.html",
    "persistent": false
  },
  "options_ui": {
    "page": "options/options.html"
  },
  "icons": {
    "128": "Devspark_logo.png"
  }
}